<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kz.sdu.margulan.trdr.TrPage"
    android:orientation="vertical"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/linearLayout"
        android:orientation="horizontal"
        android:layout_below="@+id/TrWord"
        android:layout_centerHorizontal="true"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">

        <Button
            android:text="Английский"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lang1"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:background="@color/colorPrimary"
            android:clickable="false" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@android:drawable/stat_notify_sync_noanim"
            android:id="@+id/switchLang"
            android:layout_weight="1.00"
            android:background="?android:attr/selectableItemBackground" />

        <Button
            android:text="Русский"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lang2"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:background="@color/colorPrimary" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:minHeight="78dp"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/TrWord"
        android:layout_weight="3"
        android:drawableTop="@color/colorAccent"
        android:gravity="top|left"
        android:textColor="@android:color/black"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:backgroundTint="@android:color/holo_orange_light"/>
    <Button
        android:layout_alignRight="@id/TrWord"
        android:layout_centerVertical="@id/TrWord"
        android:background="@android:drawable/ic_menu_delete"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:id="@+id/clearET" />


</RelativeLayout>
